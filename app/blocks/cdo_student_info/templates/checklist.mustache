<div class="container">
    <div class="accordion" id="checklists">
        {{#checklist}}
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link btn-block text-left " type="button"
                                data-toggle="collapse"
                                data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <span class="font-weight-bold">{{#str}} grade_book_name, block_cdo_student_info {{/str}}:</span> {{record_book}}
                            <span class="font-weight-bold">{{#str}} checklist_number, block_cdo_student_info {{/str}}:</span> {{number}}
                            <span class="font-weight-bold">{{#str}} checklist_date, block_cdo_student_info {{/str}}:</span> {{checklist_date}}

                        </button>
                    </h2>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#checklists">
                    <div class="card-body">
                        {{> block_cdo_student_info/components/table_checklist}}
                    </div>
                </div>
            </div>
        {{/checklist}}
    </div>
</div>
