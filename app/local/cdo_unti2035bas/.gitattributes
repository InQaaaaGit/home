# Auto detect text files and perform LF normalization
* text=auto

# PHP files should always use LF
*.php text eol=lf

# JavaScript files should use LF
*.js text eol=lf
*.js.map text eol=lf

# CSS files should use LF
*.css text eol=lf

# Mustache templates should use LF
*.mustache text eol=lf

# JSON files should use LF
*.json text eol=lf

# XML files should use LF
*.xml text eol=lf

# Markdown files should use LF
*.md text eol=lf

# Configuration files should use LF
*.yml text eol=lf
*.yaml text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Minified files should be treated as binary to avoid line ending issues
*.min.js binary
*.min.css binary 