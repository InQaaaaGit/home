{{!
    @template block_cdo_notification/notification_headers

    Template for displaying notification headers only.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * notifications - array of notification objects
    * notifications_count - number of notifications
    * template - template name

    Example context (json):
    {
        "notifications": [
            {
                "header": "Новое уведомление",
                "body_message": "Текст сообщения",
                "date": "15-01-2024 10:30:00",
                "notification-idx": "unique_id",
                "notification-first": true
            }
        ],
        "notifications_count": 5,
        "template": "block_cdo_notification/notification_headers"
    }
}}

<div class="block-cdo-notification-headers" data-block="cdo_notification">
    {{#notifications_count}}
        <div class="notification-headers-container">
            <div class="notification-headers-header">
                <div class="notification-headers-title-row">
                    <h3 class="notification-headers-title">
                        <i class="fa fa-bell" aria-hidden="true"></i>
                        {{#str}}notifications, block_cdo_notification{{/str}}
                        <span class="notification-count badge badge-primary">{{notifications_count}}</span>
                    </h3>
                    <a href="{{{wwwroot}}}/blocks/cdo_notification/index.php"
                       class="view-all-notifications-link" 
                       title="{{#str}}viewallnotifications, block_cdo_notification{{/str}}">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        {{#str}}viewallnotifications, block_cdo_notification{{/str}}
                    </a>
                </div>
            </div>
            
            <div class="notification-headers-list">
                {{#notifications}}
                    <div class="notification-header-item" 
                         data-notification-id="{{id}}">
                        <div class="notification-header-content">
                            <div class="notification-header-main">
                                <h4 class="notification-title">
                                    <a href="{{{wwwroot}}}/blocks/cdo_notification/notification.php?id={{id}}"
                                       class="notification-link" 
                                       title="{{header}}">
                                        {{header}}
                                    </a>
                                </h4>
                                <div class="notification-meta">
                                    <span class="notification-time">
                                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                                        {{date}}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/notifications}}
            </div>
        </div>
    {{/notifications_count}}
    
    {{^notifications_count}}
        <div class="notification-headers-empty">
            <div class="empty-state">
                <i class="fa fa-bell-slash" aria-hidden="true"></i>
                <p>{{#str}}nonotifications, block_cdo_notification{{/str}}</p>
                <a href="{{{wwwroot}}}/blocks/cdo_notification/index.php"
                   class="btn btn-outline-primary btn-sm">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    {{#str}}viewallnotifications, block_cdo_notification{{/str}}
                </a>
            </div>
        </div>
    {{/notifications_count}}
</div>

{{#js}}
require(['jquery', 'core/ajax', 'core/notification'], function($, Ajax, Notification) {
    'use strict';
    
    // Delete notification
    $(document).on('click', '.delete-notification-btn', function(e) {
        e.preventDefault();
        var notificationId = $(this).data('notification-id');
        var $item = $(this).closest('.notification-header-item');
        
        if (confirm('{{#str}}confirmdeletenotification, block_cdo_notification{{/str}}')) {
            $item.fadeOut(300, function() {
                $(this).remove();
                
                // Update notification count
                var $count = $('.notification-count');
                var currentCount = parseInt($count.text());
                if (currentCount > 1) {
                    $count.text(currentCount - 1);
                } else {
                    $('.notification-headers-container').replaceWith(
                        '<div class="notification-headers-empty">' +
                        '<div class="empty-state">' +
                        '<i class="fa fa-bell-slash" aria-hidden="true"></i>' +
                        '<p>{{#str}}nonotifications, block_cdo_notification{{/str}}</p>' +
                        '<a href="{{{wwwroot}}}/blocks/cdo_notification/index.php" ' +
                        'class="btn btn-outline-primary btn-sm">' +
                        '<i class="fa fa-list" aria-hidden="true"></i>' +
                        '{{#str}}viewallnotifications, block_cdo_notification{{/str}}' +
                        '</a></div></div>'
                    );
                }
            });
        }
    });
});
{{/js}}

